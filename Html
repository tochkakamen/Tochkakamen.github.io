    <script>
        class TochkaKamenMessenger {
            constructor() {
                this.init();
                this.createParticles();
                this.createFloatingShapes();
                this.updateVisitCounter();
                this.bindEvents();
            }

            init() {
                // Анимация появления элементов
                this.animateElements();
                
                // Обновление счетчика каждые 10 секунд
                setInterval(() => {
                    this.updateVisitCounter();
                }, 10000);
            }

            createParticles() {
                const particlesContainer = document.getElementById('particles');
                const particleCount = 50;

                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    
                    // Случайное позиционирование
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = Math.random() * 6 + 's';
                    particle.style.animationDuration = (4 + Math.random() * 4) + 's';
                    
                    // Случайный размер
                    const size = 2 + Math.random() * 4;
                    particle.style.width = size + 'px';
                    particle.style.height = size + 'px';
                    
                    particlesContainer.appendChild(particle);
                }
            }

            createFloatingShapes() {
                const shapesContainer = document.getElementById('floatingShapes');
                const shapeCount = 20;

                for (let i = 0; i < shapeCount; i++) {
                    const shape = document.createElement('div');
                    shape.className = 'floating-shape';
                    
                    // Случайные параметры
                    const size = 20 + Math.random() * 100;
                    shape.style.width = size + 'px';
                    shape.style.height = size + 'px';
                    shape.style.left = Math.random() * 100 + '%';
                    shape.style.animationDelay = Math.random() * 20 + 's';
                    shape.style.animationDuration = (15 + Math.random() * 10) + 's';
                    
                    shapesContainer.appendChild(shape);
                }
            }

            updateVisitCounter() {
                const counter = document.getElementById('visitCounter');
                const currentCount = parseInt(counter.textContent.replace(',', ''));
                const newCount = currentCount + Math.floor(Math.random() * 3);
                counter.textContent = newCount.toLocaleString();
                
                // Анимация изменения
                counter.style.transform = 'scale(1.2)';
                counter.style.color = '#4ecdc4';
                setTimeout(() => {
                    counter.style.transform = 'scale(1)';
                    counter.style.color = 'white';
                }, 300);
            }

            bindEvents() {
                const sendBtn = document.getElementById('sendMessageBtn');
                const nameInput = document.getElementById('senderName');
                const contactInput = document.getElementById('senderContact');
                const messageInput = document.getElementById('messageText');

                sendBtn.addEventListener('click', () => {
                    this.sendMessage();
                });

                // Отправка по Enter в текстовом поле (с Ctrl)
                messageInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && e.ctrlKey) {
                        this.sendMessage();
                    }
                });

                // Автосохранение в localStorage
                [nameInput, contactInput, messageInput].forEach(input => {
                  